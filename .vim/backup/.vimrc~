execute pathogen#infect()
syntax on
filetype plugin indent on

" Use ack instead of grep
set grepprg=ack

" sets backup directory
set backup
set backupdir=~/.vim/backup
set directory=~/.vim/tmp

" color scheme - from dougblack.io/wors/a-good-vimrc.html
colorscheme badwolf 

syntax enable "enable syntax processing

set tabstop=4
set softtabstop=4
set expandtab

set number
set showcmd
set cursorline
